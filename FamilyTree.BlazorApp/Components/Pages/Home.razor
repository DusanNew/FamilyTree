@page "/"
@using FamilyTree.Database.Models
@using System.Net.Http.Json
@using System.Text
@inject HttpClient Http
@rendermode InteractiveServer

<PageTitle>Family Tree</PageTitle>

<div class="home-container">
    <div class="hero-section">
        <div class="tree-icon">🌳</div>
        <h1 class="main-title">Family Tree</h1>
        <p class="subtitle">Discover Your Roots, Connect Your Branches</p>
        <div class="features">
            <div class="feature-card">
                <div class="feature-icon">👨‍👩‍👧‍👦</div>
                <h3>Four Generations</h3>
                <p>Explore family connections across time</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">📊</div>
                <h3>Visual Tree</h3>
                <p>Beautiful, interactive family diagram</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">💾</div>
                <h3>Export SVG</h3>
                <p>Save and share your family history</p>
            </div>
        </div>
    </div>
</div>

